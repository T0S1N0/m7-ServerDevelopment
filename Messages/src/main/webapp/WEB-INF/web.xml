<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>MessagesServlet</servlet-name>
        <servlet-class>marianao.daw.messages.MessagesServlet</servlet-class>
        <init-param>
            <description>The system route to the mail dir.</description>
            <param-name>route</param-name>
            <param-value>/C:\Users\mmartin\usersMail</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>MessagesServlet</servlet-name>
        <url-pattern>/secured/MessagesServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>secured/MessagesServlet</welcome-file>
        <!-- mapeamos el servlet con el path-->
    </welcome-file-list>
    <error-page>
        <error-code>401</error-code>
        <location>/errorLogin.jsp</location>
    </error-page>
    <security-constraint>
        <display-name>ToMessagesServlet</display-name>
        <web-resource-collection>
            <web-resource-name>MessagesServlet</web-resource-name>
            <description/>
            <url-pattern>/secured/*</url-pattern>
            <!--creamos un virtual path para que solo pida login en intentar acceder al servlet omitiendo asi el formulario y los css-->
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>users</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>file</realm-name>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/errorLogin.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>users</role-name>
    </security-role>
</web-app>
